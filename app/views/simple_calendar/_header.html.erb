<div class="simple-calendar">
  <div class="slider">
    <div class="calendar-heading">
        <div class="prev"><%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view %></div>
        <div class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></div>
        <div class="next"><%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view %></div>
    </div>
  </div>

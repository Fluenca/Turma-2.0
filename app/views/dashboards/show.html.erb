<div class = 'dash_top'>
  <div class = 'title'>
    <h1>Hello <span class="pink"><%= current_user.name %></span>, we love you.</h1>
  </div>

  <div class="tabs">
    <%= link_to "My events", dashboards_path(page: 'events') %>
    <%= link_to "My invitations", invitations_path(page: 'invitations') %>
  </div>

  <div>
    <div>
      <h1>Your events:</h1>
      <% @events.each do |event| %>
        <h1><%= event.name %></h1>
      <% end %>
    </div>
    <hr>
    <div>
      <h1>Your invitations:</h1>
      <% @invitations.each do |invitation| %>
        <% if invitation.status == true %>
        <h1><%= invitation.event.name %></h1>
        <% end%>
      <% end %>
    </div>

  </div>

  <%# <div>
    <%= render 'invitations/index' %>
  <%# </div> %>

  <%# <div class="">
    <%= render "#{params[:page]}.html.erb" %>
  <%# </div> %>

</div>

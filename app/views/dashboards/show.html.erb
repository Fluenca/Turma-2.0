<div>
  <div class = 'title'>
    <h1>Hello <span><%= current_user.name %></span>, we love you.</h1>
  </div>
</div>

<div class="wrapper" data-controller="invitation">
  <div class="close-btn mt-2 hidden" data-invitation-target="close" data-action="click->invitation#close">X</div>
    <div class="rsvpLinks d-flex">
      <a href="#">Approve</a>
      <a href="#">Decline</a>
    </div>
    <div class="tab" data-invitation-target="tab" data-action="click->invitation#open">
      <h3>INVITATIONS</h3>
        <span><%= invitation.event.name %></span>
        <span><%= invitation.event.user.name %></span>
          <div class = "invitation hidden" data-invitation-target="content" >
            <%= render 'dashboards/invitation', :locals => { :event => @event, :invitation => @invitation } %>
          </div>
    </div>
</div>

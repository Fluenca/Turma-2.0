<div class = 'dash_top'>
  <div class = 'title'>
    <h1>Hello <span class="pink"><%= current_user.name %></span>, we love you.</h1>
  </div>

  <div class="tabs">
    <%= link_to "My events", dashboards_path(page: 'events') %>
    <%= link_to "My invitations", invitations_path(page: 'invitations') %>
  </div>


  <div>
    <div>
      <h1>Your events</h1>
      <div>
        <%= render 'event' %>
      </div>
    </div>
    <hr>
    <div>
      <h1>Your invitations</h1>
      <div>
        <%= render 'invitation' %>
      </div>
    </div>
    <div>
      <h1>Edit profile</h1>
      <div>
        <%= render :template => 'devise/registrations/edit',
                        :locals => {
                          :resource => current_user,
                          :resource_name => 'User' } %>
      </div>
    </div>
  </div>


  <%# <div class="">
    <%= render "#{params[:page]}.html.erb" %>
  <%# </div> %>

</div>

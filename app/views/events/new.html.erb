<div class="wrapper">
  <h3>New Event</h3>
  <%= simple_form_for @event do |f| %>
    <div class="form-inputs">
        <%= f.input :name %>
        <div class="form-actions d-flex align-items-center">
          <%= f.input :date, html5: true %>
          <%= f.input :photo, as: :file %>
        </div>
    <% if current_user.role == "Artist" %>
      <%= f.input :address %>
      <%= f.input :performers %>
      <%= f.input :guestlist %>
      <%= f.input :rider %>
    <% else %>
      <%= f.input :address %>
      <%= f.input :category %>
      <%= f.input :accomodation %>
      <%= f.input :food %>
      <%= f.input :technician %>
      <%= f.input :driver %>
      <%= f.input :performers %>
    <% end %>
    </div>
    <%= f.button :submit, 'Create Event', class: "button btn-primary" %>
  <% end %>
</div>

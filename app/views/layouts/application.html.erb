<!DOCTYPE html>
<html>
  <head>
    <title>TURMA - your digital tour manager!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('cube-solid.svg') %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body data-controller="calendar" data-calendar-open-value="<%= params[:commit] == 'Search' %>">
    <%= render 'shared/navbar' if user_signed_in? %>
    <%= render 'shared/flashes' %>
    <div class="container">
      <%= yield %>
    </div>

    <%= render 'shared/footer' if user_signed_in? %>

  </body>
</html>

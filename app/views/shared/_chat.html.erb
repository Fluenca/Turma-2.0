  <div class="chatroom">
    <div class="messages" id="scroll-bar">
      <% @event.messages.each do |message| %>
        <div id="message-<%= message.id %>">
          <small>
            <strong><%= message.user.nickname %></strong>
            <i class="time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          </small>
          <p><%= message.content %></p>
        </div>
      <% end %>
    </div>

    <%= simple_form_for [@event, @message], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@event.name}" %>
      <%= f.submit 'Send', class: "btn-primary form-send" %>
    <% end %>
  </div>

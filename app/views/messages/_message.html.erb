<% name = message.user.name || message.user.nickname %>
<% dir = "text-left" %>

<div class="<%= dir %>" id="message-<%= message.id %>">
  <small>
    <strong class="name"><%= name %></strong>
    <i class="time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
